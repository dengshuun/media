<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:baselineAligned="false"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" >

        <RelativeLayout
            android:id="@+id/usb_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_media_mian_app_selector"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/txt_usb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_usb_selector"
                android:enabled="false"
                android:gravity="center_horizontal|bottom"
                android:text="@string/txt_usb"
                android:textColor="@color/textcolor_selector"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btmusic_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/usb_layout"
            android:background="@drawable/bg_media_mian_app_selector"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/txt_btmusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btmusic_selector"
                android:enabled="false"
                android:gravity="center_horizontal|bottom"
                android:text="@string/txt_btmusic"
                android:textColor="@color/textcolor_selector"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ipod_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btmusic_layout"
            android:background="@drawable/bg_media_mian_app_selector"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/txt_ipod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ipod_selector"
                android:enabled="false"
                android:gravity="center_horizontal|bottom"
                android:text="@string/txt_ipod"
                android:textColor="@color/textcolor_selector"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_back_selector" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/system_main_back" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/img_interval_line" />

    <ImageView
        android:id="@+id/right_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/media_right_bg" >
    </ImageView>

</LinearLayout>