<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hwatong.media"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.hwatong.ipodui.IPodMainActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.hwatong.btmusic.BluetoothMusicActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.hwatong.usbmusic.UsbMusicActivity"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hwatong.usbpicture.UsbPictureActivity"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_usb_picture" >
        </activity>
        <activity
            android:name="com.hwatong.usbvedio.UsbVedioActivity"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_usb_vedio" >
        </activity>
    </application>

</manifest>